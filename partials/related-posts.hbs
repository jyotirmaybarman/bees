{{#is "post"}}
    {{#get "posts" include="authors" filter="tags:[{{post.tags}}]+id:-{{post.id}}" limit="3" as |next|}}
        {{#if next}}
            <h4 class="font-bold mb-4">Read next</h4>
            <div class="grid sm:grid-cols-3 gap-10">
                {{#foreach next}}
                    {{> "card"  no_excerpt=true }}
                {{/foreach}}
            </div>
        {{/if}}
    {{/get}}
{{/is}}