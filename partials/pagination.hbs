<div class="flex justify-center items-center mt-16 mb-5">
  <nav class="flex justify-between items-center gap-4" aria-label="{{t "Pagination"}}">
    {{#if prev}}
      <a href="{{page_url prev}}" class="p-1 rounded-md flex justify-center items-center hover:bg-blue-500 group" title="previous">
        <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 group-hover:text-white">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75L3 12m0 0l3.75-3.75M3 12h18" />
        </svg>
      </a>
    {{/if}}
    <span class="">{{t "Page"}} {{page}} {{t "of"}} {{pages}}</span>
    {{#if next}}
      <a href="{{page_url next}}" class="p-1 rounded-md flex justify-center items-center hover:bg-blue-500 group" title="next">
        <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 group-hover:text-white">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
        </svg>
      </a>
    {{/if}}
  </nav>
</div>